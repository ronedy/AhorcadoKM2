<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdivinaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:text="EL AHORCADO KM"
            android:textSize="30dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/txtdisplay"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:text="TEXTO PALABRA"
            android:textSize="30dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtvidas"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:text="Intentos = 5"
            android:textSize="24dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/txtpuntos"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:text="Puntos = 0"
            android:textSize="24dp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/txtletra"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:hint="Letra a adivinar" />


        <Button
            android:id="@+id/btnIntentar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:onClick="juego"
            android:text="Intentar" />





    </LinearLayout>

</LinearLayout>